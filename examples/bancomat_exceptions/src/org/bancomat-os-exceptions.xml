<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="http://moise.sourceforge.net/xml/os.xsl" type="text/xsl" ?>

<organisational-specification
	id="bancomat_exceptions" os-version="0.8"

	xmlns='http://moise.sourceforge.net/os'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'>

	<structural-specification>

		<role-definitions>
			<role id="bancomatHandler" />
			<role id="requestHandler" />
			<role id="reader" />
			<role id="parser" />
			<role id="moneyKeeper" />
		</role-definitions>

		<group-specification id="bancomat_group">
			<roles>
				<role id="bancomatHandler" min="1" max="1" />
				<role id="requestHandler" min="1" max="1" />
				<role id="reader" min="1" max="1" />
				<role id="parser" min="1" max="1" />
				<role id="moneyKeeper" min="1" max="1" />
			</roles>
		</group-specification>

	</structural-specification>

	<functional-specification>
		<scheme id="bancomat_sch">

			<goal id="withdraw">
				<plan operator="sequence">
					<goal id="obtainAmount">
						<plan operator="sequence">
							<goal id="getAmountAsString" />
							<goal id="parseAmount">
								<throwing id="throwParseAmount">
									<exception id="nan" />
								</throwing>
							</goal>
						</plan>
						<handler id="handler_nan" target="nan">
							<goal id="recoverFromNan">
								<throwing id="throwRecoverFromNan">
									<exception id="amountUnavailable" />
								</throwing>
							</goal>
						</handler>
					</goal>
					<goal id="provideMoney"/>
				</plan>
				<handler id="handler_au" target="amountUnavailable">
					<goal id="retryLater" />
				</handler>
			</goal>

			<mission id="mWithdraw" min="1" max="1">
				<goal id="withdraw" />
				<goal id="retryLater" />
			</mission>
			<mission id="mObtainAmount" min="1" max="1">
				<goal id="obtainAmount" />
				<goal id="recoverFromNan" />
				<throwing id="throwRecoverFromNan" />
			</mission>
			<mission id="mGetAmountAsString" min="1" max="1">
				<goal id="getAmountAsString" />
			</mission>
			<mission id="mParseAmount" min="1" max="1">
				<goal id="parseAmount" />
				<throwing id="throwParseAmount" />
			</mission>
			<mission id="mProvideMoney" min="1" max="1">
				<goal id="provideMoney" />
			</mission>
		</scheme>
	</functional-specification>

	<normative-specification>
		<norm id="n1" type="obligation" role="bancomatHandler" mission="mWithdraw"/>
		<norm id="n2" type="obligation" role="requestHandler" mission="mObtainAmount" />
		<norm id="n3" type="obligation" role="reader" mission="mGetAmountAsString" />
		<norm id="n4" type="obligation" role="parser" mission="mParseAmount" />
		<norm id="n5" type="obligation" role="moneyKeeper" mission="mProvideMoney" />
	</normative-specification>

</organisational-specification>
